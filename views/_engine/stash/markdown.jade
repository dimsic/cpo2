extends ../../generic/generic

block head_data
    - var head = {};
    - head.styles = [];
    - head.title = 'Markdown shell';

block body
    section
        h1 Markdown shell
        form(action="/_engine/stash/markdown-commit", method="post", target="frame")
            textarea(name="markdown", style="width: 100%; height: 600px; margin-bottom: 20px")
            input(type="submit", value="Submit", style="width: 100%; height: 50px; margin-bottom: 20px; font-family: Courier new; font-size: 200%")
        iframe(name="frame", style="width: 100%; height: 600px")
